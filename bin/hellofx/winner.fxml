<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="CENTER" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.WinnerController">
   <children>
      <VBox alignment="CENTER" spacing="30" prefHeight="600.0" prefWidth="800.0">
         <!-- Title -->
         <Label text="ðŸ† The Winner is..." styleClass="title" />

         <!-- Podium -->
         <HBox alignment="BOTTOM_CENTER" spacing="20">
            <children>
               <!-- 2nd Place -->
               <VBox fx:id="secondPlaceVBox" alignment="CENTER" styleClass="podium-box" prefWidth="150" prefHeight="300">
                  <Label fx:id="secondPlaceLabel" text="2nd" styleClass="rank-label" />
                  <Label fx:id="secondPlaceName" text="Player 2" styleClass="player-name" />
               </VBox>

               <!-- 1st Place -->
               <VBox fx:id="firstPlaceVBox" alignment="TOP_CENTER" styleClass="podium-box" prefWidth="180" prefHeight="400" spacing="10">
                  <Label fx:id="firstPlaceLabel" text="1st" styleClass="rank-label" />
                  <Label fx:id="firstPlaceName" text="Player 1" styleClass="winner-name" />
               </VBox>

               <!-- 3rd Place -->
               <VBox fx:id="thirdPlaceVBox" alignment="BOTTOM_CENTER" styleClass="podium-box" prefWidth="150" prefHeight="200" spacing="10">
                  <Label fx:id="thirdPlaceLabel" text="3rd" styleClass="rank-label" />
                  <Label fx:id="thirdPlaceName" text="Player 3" styleClass="player-name" />
               </VBox>
            </children>
         </HBox>

         <!-- Buttons -->
         <HBox spacing="20" alignment="CENTER">
            <children>
               <Button text="Play Again" onAction="#handlePlayAgainAction" />
               <Button text="Exit" onAction="#handleExitAction" />
            </children>
         </HBox>
      </VBox>
   </children>
</StackPane>